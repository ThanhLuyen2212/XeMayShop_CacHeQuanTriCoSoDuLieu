@using XeMayShop.Models;

@{
    ViewBag.Title = "Home Page";
    List<Xe> banner = ViewBag.banner;
    List<Xe> newProduct = ViewBag.newProduct;
}

<!-- Banner Section Begin -->
<section class="banner set-bg" style="background-image: url(@Url.Content("~/Assets/img/banner/banner_chinh1.png"))">

    <div class="container">
        <div class="row">
            <div class="col-xl-7 col-lg-8 m-auto">
                <div class="banner__slider owl-carousel">
                    @* lay 3 san pham moi nhat*@
                    @foreach (Xe item in banner)
                    {
                        <div class="banner__item">
                            <div class="banner__text">

                                <h1>@item.TenXe</h1>
                                <a href="~/ChiTietXe/Index/@item.MaXe">Shop now</a>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Banner Section End -->
<!-- Product Section Begin -->
<section class="product spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-4 col-md-4">
                <div class="section-title" style="width:500px">
                    <h4 style="color:red">Những sản phẩm mới nhất</h4>
                </div>
            </div>
        </div>


        <div class="row property__gallery">
            @foreach (Xe item in newProduct)
            {
                <a href="~/ChiTietXe/Index/@item.MaXe">
                    <div class="col-lg-3 col-md-4 col-sm-6">
                        <div class="product__item">
                            <div>
                                @{
                                    var base64 = Convert.ToBase64String(item.HinhAnh);
                                    var imgSrc = String.Format("data:image/gif;base64,{0}", base64);
                                }
                                <img src='@imgSrc' width="262px" height="360px" alt="Alternate Text" />
                                @*<img src="@Url.Content(item.HinhAnh)" width="262px" height="360px" alt="Alternate Text" />*@
                            </div>
                            <div class="product__item__text">
                                <h6><a href="#">@item.TenXe</a></h6>
                                <div class="product__price money">@item.GiaXe VND</div>
                            </div>
                        </div>
                    </div>
                </a>
            }
        </div>




    </div>
</section>
<!-- Product Section End -->
