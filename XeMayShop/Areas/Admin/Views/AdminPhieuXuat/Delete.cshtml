@model XeMayShop.Models.PhieuXuat

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div>
    <div class="col-md-6 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h2 class="card-title">Bạn có thực sự muốn xóa phiếu xuất này không!!!</h2>
                <h4 class="card-title">Chi tiết thông tin phiếu xuất</h4>

                <form class="forms-sample">
                    <div class="form-group row">
                        <label for="exampleInputUsername2" class="col-sm-3 col-form-label">Mã phiếu xuất</label>
                        <div class="col-sm-9">
                            @Html.DisplayFor(model => model.MaPhieuXuat)
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="exampleInputUsername2" class="col-sm-3 col-form-label">Nhân viên</label>
                        <div class="col-sm-9">
                            @Html.DisplayFor(model => model.NhanVien.TenNhanVien)
                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="exampleInputEmail2" class="col-sm-3 col-form-label">Khách hàng</label>
                        <div class="col-sm-9">
                            @Html.DisplayFor(model => model.KhachHang.TenKhachHang)
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="exampleInputEmail2" class="col-sm-3 col-form-label">Ngày đặt xe</label>
                        <div class="col-sm-9">
                            @Html.DisplayFor(model => model.NgayDatXe)
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="exampleInputEmail2" class="col-sm-3 col-form-label">Ngày xuất</label>
                        <div class="col-sm-9">
                            @Html.DisplayFor(model => model.NgayXuat)
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="exampleInputEmail2" class="col-sm-3 col-form-label">Tổng số xe xuất</label>
                        <div class="col-sm-9">
                            @Html.DisplayFor(model => model.TongSoXeXuat)
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="exampleInputEmail2" class="col-sm-3 col-form-label">Thành tiền xuất</label>
                        <div class="col-sm-9">
                            @Html.DisplayFor(model => model.ThanhTienXuat)
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="exampleInputEmail2" class="col-sm-3 col-form-label">Tình trạng</label>
                        <div class="col-sm-9">
                            @Html.DisplayFor(model => model.TinhTrang)
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <button style="width:180px; type="submit" value="Delete" class="btn btn-primary mr-2">Delete</button>
        </div>
    }

    <a href="~/Admin/AdminPhieuXuat/Index">
        <button type="button" class="btn btn-outline-secondary btn-lg btn-block" style="width:300px; margin-top:40px">Trở về</button>
    </a>
</div>

